<!-- my-recipes.hbs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Saved Recipes</title>
  <style>
    .recipes-table {
      margin: 0 auto;
      border-collapse: collapse;
      width: 80%; /* Adjust the width as needed */
    }

    .recipes-table th, .recipes-table td {
      border: 1px solid #ddd; /* Border color */
      padding: 8px;
      text-align: left;
    }

    .recipes-table th {
      background-color: #f2f2f2;
    }

    .recipes-table tr:hover {
      background-color: #f5f5f5; /* Hover color */
    }
  </style>
</head>

<body>
  <div style="text-align: center; margin-top: 50px;">
    <h1>Saved Recipes</h1>

    <button onclick="location.href='/recipes/add';" style="padding: 10px 20px; font-size: 16px; margin-top: 20px;">Add a Recipe</button>
    <button onclick="location.href='/welcome';" style="padding: 10px 20px; font-size: 16px; margin-top: 20px;">Back to Home</button>

    <p>Your Saved Recipes:</p>
    <table class="recipes-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Ingredients</th>
          <th>Instructions</th>
        </tr>
      </thead>
      <tbody>
        {{#each recipes}}
        <tr>
          <td>{{title}}</td>
          <td>{{ingredients}}</td>
          <td>{{instructions}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>

</html>
