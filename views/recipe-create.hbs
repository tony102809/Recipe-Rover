<style>
  #recipeFormContainer {
    text-align: center;
    margin-top: 50px;
  }

  #recipeForm {
    display: inline-block;
    text-align: left;
  }

  #recipeForm label {
    display: block;
    margin-top: 10px;
  }

  #recipeForm input,
  #recipeForm textarea {
    width: 100%; 
    padding: 10px;
    margin-top: 5px;
    box-sizing: border-box;
  }

  #addRecipe {
    display: block;
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 16px;
  }
</style>

<div id="recipeFormContainer">
  <form id="recipeForm" action="/recipes/add" method="post">
    <label for="title">Recipe Title:</label>
    <input type="text" id="title" name="title" required>
    
    <label for="ingredients">Ingredients:</label>
    <textarea id="ingredients" name="ingredients" rows="4" required></textarea>
    
    <label for="instructions">Instructions:</label>
    <textarea id="instructions" name="instructions" rows="4" required></textarea>
    
    <button type="submit" id="addRecipe">Add Recipe</button>
  </form>
</div>
